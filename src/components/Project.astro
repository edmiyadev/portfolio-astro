---
interface Props {
  image: string;
  title: string;
  technologies: string[];
  description: string;
  // links: [][];
}

const { image, title, technologies = [], description, } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center gap-3 md:flex-row lg:items-start lg:justify-start"
>
  <img class="h-48 w-96" src={image} alt="" />
  <div class="flex flex-col w-full md:w-1/2 md:max-w-lg">
    <h3>{title}</h3>
    <div>
      {
        technologies.map((technology) => (
          <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
            {technology}
          </span>
        ))
      }

      <p>{description}</p>

      <!-- {
        links.map((link) => (
          <a
            href="#"
            class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center"
          >
            {link}
          </a>
        ))
      } -->
    </div>
  </div>
</div>
