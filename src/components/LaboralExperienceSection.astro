---
interface Props {
    position: string;
    company: string;
    date: string;
    description: string;
}

const {position, company, date, description} = Astro.props;
---

<div class="flex flex-col border bg-gray-700 p-2 rounded-xl md:flex-row md:gap-4 w-5/6 lg:rounded-none lg:border-none lg:bg-[#13151a]">
    <div class="md:w-1/3 flex flex-col mb-2">
      <p class="text-lg text-yellow-400 font-bold">{position}</p>
      <p class="font-bold">{company}</p>
      <p class="text-sm text-gray-50 opacity-70">{date}</p>
    </div>
    <p class="md:w-2/3">
      {description}
    </p>
  </div>